<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oms.mmc.android.fast.framwork.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:configChanges="locale"
            android:label="主界面"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ChatListActivity"
            android:configChanges="locale"
            android:label="会话详情"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SampleChooseActivity"
            android:configChanges="locale"
            android:label="例子选择"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.activity.ActivitySampleActivity" />
        <activity android:name=".ui.activity.ListActivitySampleActivity" />
        <activity android:name=".ui.activity.ListStickyActivitySampleActivity" />
        <activity android:name=".ui.activity.ListActivitySingleCheckSampleActivity" />
        <activity android:name=".ui.activity.ListActivityMultipleCheckSampleActivity" />
        <activity android:name=".ui.activity.ListActivityModeSampleActivity" />
        <activity android:name=".ui.activity.BaseFragmentSampleActivity" />
        <activity android:name=".ui.activity.BaseListFragmentSampleActivity" />
        <activity android:name=".ui.activity.SimpleLoadViewHelperUseSampleActivity" />
        <activity android:name=".ui.activity.LoadViewFactorySampleActivity" />
        <activity android:name=".ui.activity.FragmentOperateActivity" />
        <activity android:name=".ui.activity.NestedFragmentSampleActivity" />
        <activity android:name=".ui.activity.ContactSystemActivity" />
    </application>
</manifest>